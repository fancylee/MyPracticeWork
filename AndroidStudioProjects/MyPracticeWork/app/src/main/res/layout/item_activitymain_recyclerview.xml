    <android.support.v7.widget.CardView
        android:id="@+id/item_activitymain_cardview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_margin="7dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:id="@+id/item_activitymain_recyclerview_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"
        />
        <RelativeLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_toRightOf="@+id/item_activitymain_recyclerview_iv"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_activitymain_recyclerview_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="标题"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/item_activitymain_recyclerview_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="描述"
                android:id="@+id/item_activitymain_recyclerview_tv_des"
                android:ellipsize="end"
                android:lineSpacingExtra="6dp"
                />
            <TextView
                android:id="@+id/item_activitymain_recyclerview_tv_time"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="08/15"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
