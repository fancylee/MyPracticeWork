<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
    <ImageView
        android:id="@+id/item_activitymain_recyclerview_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"
        />
        <RelativeLayout
            android:paddingTop="10dp"
            android:layout_toRightOf="@+id/item_activitymain_recyclerview_iv"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_activitymain_recyclerview_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="标题"
                android:singleLine="true"
                android:maxEms="10"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/item_activitymain_recyclerview_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="描述"
                android:id="@+id/item_activitymain_recyclerview_tv_des"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/item_activitymain_recyclerview_tv_time"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="08/15"
                />
        </RelativeLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>